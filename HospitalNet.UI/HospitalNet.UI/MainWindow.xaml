<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalNet.UI"
        x:Class="HospitalNet.UI.MainWindow"
        mc:Ignorable="d"
        Title="HospitalNet - Hospital Management System" 
        Height="768" 
        Width="1280"
        MinHeight="600"
        MinWidth="900"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" 
                Background="{DynamicResource PrimaryBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,1,0">
            <StackPanel Orientation="Vertical">
                <Border Background="Transparent" Padding="16" BorderThickness="0,0,0,1" BorderBrush="#FFFFFF">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="HospitalNet" 
                                   FontSize="24"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="Hospital Management" 
                                   FontSize="12"
                                   Foreground="#B3E5FC"
                                   Opacity="0.9"/>
                    </StackPanel>
                </Border>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Orientation="Vertical" Margin="0,16,0,0">
                        <Button Name="DashboardButton"
                                Click="NavigationButton_Click"
                                Tag="Dashboard"
                                Height="48"
                                Background="Transparent"
                                Foreground="White"
                                HorizontalAlignment="Stretch"
                                BorderThickness="3,0,0,0"
                                BorderBrush="Transparent">
                            <StackPanel Orientation="Horizontal" Margin="16,0">
                                <TextBlock Text="??" FontSize="20" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBlock Text="Dashboard" VerticalAlignment="Center" FontSize="14"/>
                            </StackPanel>
                        </Button>

                        <Button Name="PatientsButton"
                                Click="NavigationButton_Click"
                                Tag="Patients"
                                Height="48"
                                Background="Transparent"
                                Foreground="White"
                                HorizontalAlignment="Stretch"
                                BorderThickness="3,0,0,0"
                                BorderBrush="Transparent"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal" Margin="16,0">
                                <TextBlock Text="??" FontSize="20" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBlock Text="Patients" VerticalAlignment="Center" FontSize="14"/>
                            </StackPanel>
                        </Button>

                        <Button Name="AppointmentsButton"
                                Click="NavigationButton_Click"
                                Tag="Appointments"
                                Height="48"
                                Background="Transparent"
                                Foreground="White"
                                HorizontalAlignment="Stretch"
                                BorderThickness="3,0,0,0"
                                BorderBrush="Transparent"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal" Margin="16,0">
                                <TextBlock Text="??" FontSize="20" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBlock Text="Appointments" VerticalAlignment="Center" FontSize="14"/>
                            </StackPanel>
                        </Button>

                        <Button Name="DoctorsButton"
                                Click="NavigationButton_Click"
                                Tag="Doctors"
                                Height="48"
                                Background="Transparent"
                                Foreground="White"
                                HorizontalAlignment="Stretch"
                                BorderThickness="3,0,0,0"
                                BorderBrush="Transparent"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal" Margin="16,0">
                                <TextBlock Text="??" FontSize="20" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBlock Text="Doctors" VerticalAlignment="Center" FontSize="14"/>
                            </StackPanel>
                        </Button>

                        <Button Name="AnalyticsButton"
                                Click="NavigationButton_Click"
                                Tag="Analytics"
                                Height="48"
                                Background="Transparent"
                                Foreground="White"
                                HorizontalAlignment="Stretch"
                                BorderThickness="3,0,0,0"
                                BorderBrush="Transparent"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal" Margin="16,0">
                                <TextBlock Text="??" FontSize="20" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBlock Text="Analytics" VerticalAlignment="Center" FontSize="14"/>
                            </StackPanel>
                        </Button>

                        <Separator Background="#FFFFFF" Opacity="0.2" Margin="8" Height="1"/>

                        <Button Name="SettingsButton"
                                Click="NavigationButton_Click"
                                Tag="Settings"
                                Height="48"
                                Background="Transparent"
                                Foreground="White"
                                HorizontalAlignment="Stretch"
                                BorderThickness="3,0,0,0"
                                BorderBrush="Transparent">
                            <StackPanel Orientation="Horizontal" Margin="16,0">
                                <TextBlock Text="S" FontSize="20" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBlock Text="Settings" VerticalAlignment="Center" FontSize="14"/>
                            </StackPanel>
                        </Button>

                        <Button Name="ExitButton"
                                Click="ExitButton_Click"
                                Height="48"
                                Background="Transparent"
                                Foreground="White"
                                HorizontalAlignment="Stretch"
                                BorderThickness="3,0,0,0"
                                BorderBrush="Transparent"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal" Margin="16,0">
                                <TextBlock Text="X" FontSize="20" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBlock Text="Exit" VerticalAlignment="Center" FontSize="14"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel VerticalAlignment="Bottom" Margin="16" Background="Transparent">
                    <TextBlock Text="v1.0.0" FontSize="12" Foreground="#B3E5FC" HorizontalAlignment="Center"/>
                    <TextBlock Text="(c) 2025 HospitalNet" FontSize="12" Foreground="#B3E5FC" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="{DynamicResource BackgroundBrush}" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource BorderBrush}" Padding="16" Margin="0,0,0,16" CornerRadius="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Name="PageTitleTextBlock" Text="Dashboard" FontSize="20" Foreground="{DynamicResource TextPrimaryBrush}" FontWeight="Bold" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
                            <TextBlock Name="UserInfoTextBlock" Text="Admin User" FontSize="14" Foreground="{DynamicResource TextPrimaryBrush}" TextAlignment="Right"/>
                            <TextBlock Name="TimestampTextBlock" Text="" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" TextAlignment="Right" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <ContentControl Grid.Row="1" Name="ContentFrame" Content=""/>
            </Grid>
        </Border>
    </Grid>
</Window>
