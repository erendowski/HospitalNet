<Window x:Class="HospitalNet.Frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalNet.Frontend"
        mc:Ignorable="d"
        Title="HospitalNet - Hospital Management System" 
        Height="768" 
        Width="1280"
        MinHeight="600"
        MinWidth="900"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        Icon="Resources/hospital-icon.ico">
    
    <Grid>
        <!-- ==================== MAIN LAYOUT ==================== -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ==================== SIDEBAR NAVIGATION ==================== -->
        <Border Grid.Column="0" 
                Background="{StaticResource PrimaryBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,1,0">
            
            <StackPanel Orientation="Vertical">
                
                <!-- Header -->
                <Border Background="Transparent" Padding="16" BorderThickness="0,0,0,1" BorderBrush="#FFFFFF">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="HospitalNet" 
                                   FontSize="{StaticResource FontSizeXLarge}"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="Hospital Management" 
                                   FontSize="{StaticResource FontSizeSmall}"
                                   Foreground="#B3E5FC"
                                   Opacity="0.9"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Buttons -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Orientation="Vertical" Margin="0,16,0,0">
                        
                        <!-- Dashboard Button -->
                        <Button Name="DashboardButton"
                                Click="NavigationButton_Click"
                                Tag="Dashboard"
                                Height="48"
                                Background="Transparent"
                                Foreground="White"
                                HorizontalAlignment="Stretch"
                                BorderThickness="3,0,0,0"
                                BorderBrush="Transparent">
                            <StackPanel Orientation="Horizontal" Margin="16,0">
                                <TextBlock Text="ðŸ“Š" FontSize="20" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBlock Text="Dashboard" 
                                           VerticalAlignment="Center"
                                           FontSize="{StaticResource FontSizeMedium}"/>
                            </StackPanel>
                        </Button>

                        <!-- Patients Button -->
                        <Button Name="PatientsButton"
                                Click="NavigationButton_Click"
                                Tag="Patients"
                                Height="48"
                                Background="Transparent"
                                Foreground="White"
                                HorizontalAlignment="Stretch"
                                BorderThickness="3,0,0,0"
                                BorderBrush="Transparent"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal" Margin="16,0">
                                <TextBlock Text="ðŸ‘¥" FontSize="20" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBlock Text="Patients" 
                                           VerticalAlignment="Center"
                                           FontSize="{StaticResource FontSizeMedium}"/>
                            </StackPanel>
                        </Button>

                        <!-- Appointments Button -->
                        <Button Name="AppointmentsButton"
                                Click="NavigationButton_Click"
                                Tag="Appointments"
                                Height="48"
                                Background="Transparent"
                                Foreground="White"
                                HorizontalAlignment="Stretch"
                                BorderThickness="3,0,0,0"
                                BorderBrush="Transparent"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal" Margin="16,0">
                                <TextBlock Text="ðŸ“…" FontSize="20" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBlock Text="Appointments" 
                                           VerticalAlignment="Center"
                                           FontSize="{StaticResource FontSizeMedium}"/>
                            </StackPanel>
                        </Button>

                        <!-- Doctors Button -->
                        <Button Name="DoctorsButton"
                                Click="NavigationButton_Click"
                                Tag="Doctors"
                                Height="48"
                                Background="Transparent"
                                Foreground="White"
                                HorizontalAlignment="Stretch"
                                BorderThickness="3,0,0,0"
                                BorderBrush="Transparent"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal" Margin="16,0">
                                <TextBlock Text="ðŸ¥" FontSize="20" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBlock Text="Doctors" 
                                           VerticalAlignment="Center"
                                           FontSize="{StaticResource FontSizeMedium}"/>
                            </StackPanel>
                        </Button>

                        <!-- Analytics Button -->
                        <Button Name="AnalyticsButton"
                                Click="NavigationButton_Click"
                                Tag="Analytics"
                                Height="48"
                                Background="Transparent"
                                Foreground="White"
                                HorizontalAlignment="Stretch"
                                BorderThickness="3,0,0,0"
                                BorderBrush="Transparent"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal" Margin="16,0">
                                <TextBlock Text="ðŸ“ˆ" FontSize="20" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBlock Text="Analytics" 
                                           VerticalAlignment="Center"
                                           FontSize="{StaticResource FontSizeMedium}"/>
                            </StackPanel>
                        </Button>

                        <!-- Separator -->
                        <Separator Background="#FFFFFF" Opacity="0.2" Margin="8" Height="1"/>

                        <!-- Settings Button -->
                        <Button Name="SettingsButton"
                                Click="NavigationButton_Click"
                                Tag="Settings"
                                Height="48"
                                Background="Transparent"
                                Foreground="White"
                                HorizontalAlignment="Stretch"
                                BorderThickness="3,0,0,0"
                                BorderBrush="Transparent">
                            <StackPanel Orientation="Horizontal" Margin="16,0">
                                <TextBlock Text="âš™ï¸" FontSize="20" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBlock Text="Settings" 
                                           VerticalAlignment="Center"
                                           FontSize="{StaticResource FontSizeMedium}"/>
                            </StackPanel>
                        </Button>

                        <!-- Exit Button -->
                        <Button Name="ExitButton"
                                Click="ExitButton_Click"
                                Height="48"
                                Background="Transparent"
                                Foreground="White"
                                HorizontalAlignment="Stretch"
                                BorderThickness="3,0,0,0"
                                BorderBrush="Transparent"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal" Margin="16,0">
                                <TextBlock Text="ðŸšª" FontSize="20" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBlock Text="Exit" 
                                           VerticalAlignment="Center"
                                           FontSize="{StaticResource FontSizeMedium}"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>
                </ScrollViewer>

                <!-- Version Info -->
                <StackPanel VerticalAlignment="Bottom" 
                           Padding="16" 
                           Background="Transparent">
                    <TextBlock Text="v1.0.0" 
                              FontSize="{StaticResource FontSizeSmall}"
                              Foreground="#B3E5FC"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Â© 2025 HospitalNet" 
                              FontSize="{StaticResource FontSizeSmall}"
                              Foreground="#B3E5FC"
                              HorizontalAlignment="Center"
                              Margin="0,4,0,0"/>
                </StackPanel>

            </StackPanel>

        </Border>

        <!-- ==================== CONTENT AREA ==================== -->
        <Border Grid.Column="1" 
                Background="{StaticResource BackgroundBrush}"
                Padding="20">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Top Bar with Breadcrumb and User Info -->
                <Border Grid.Row="0" 
                       Background="{StaticResource SurfaceBrush}"
                       BorderThickness="0,0,0,1"
                       BorderBrush="{StaticResource BorderBrush}"
                       Padding="16"
                       Margin="0,0,0,16"
                       CornerRadius="4">
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Breadcrumb / Page Title -->
                        <TextBlock Grid.Column="0"
                                  Name="PageTitleTextBlock"
                                  Text="Dashboard"
                                  FontSize="{StaticResource FontSizeXLarge}"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  FontWeight="Bold"
                                  VerticalAlignment="Center"/>

                        <!-- User Info / Timestamp -->
                        <StackPanel Grid.Column="1" 
                                   Orientation="Vertical"
                                   HorizontalAlignment="Right">
                            <TextBlock Name="UserInfoTextBlock"
                                      Text="Admin User"
                                      FontSize="{StaticResource FontSizeNormal}"
                                      Foreground="{StaticResource TextPrimaryBrush}"
                                      TextAlignment="Right"/>
                            <TextBlock Name="TimestampTextBlock"
                                      Text=""
                                      FontSize="{StaticResource FontSizeSmall}"
                                      Foreground="{StaticResource TextSecondaryBrush}"
                                      TextAlignment="Right"
                                      Margin="0,4,0,0"/>
                        </StackPanel>

                    </Grid>

                </Border>

                <!-- Content Frame / ContentControl for Navigation -->
                <ContentControl Grid.Row="1"
                               Name="ContentFrame"
                               Content=""/>

            </Grid>

        </Border>

    </Grid>

</Window>
