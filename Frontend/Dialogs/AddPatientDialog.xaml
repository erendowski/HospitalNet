<Window x:Class="HospitalNet.Frontend.Dialogs.AddPatientDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Patient"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Width="500"
        Height="550"
        Background="{StaticResource BackgroundBrush}"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize">
    
    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="20" Background="Transparent">
            <TextBlock x:Name="TitleTextBlock" Text="Add New Patient" FontSize="{StaticResource FontSizeXLarge}" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
        </StackPanel>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" Margin="20,0,20,20" Background="Transparent">
            <StackPanel Orientation="Vertical" Background="Transparent">
                <!-- First Name -->
                <TextBlock Text="First Name *" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,5"/>
                <TextBox x:Name="FirstNameTextBox" Height="35" Padding="10,0,10,0" VerticalContentAlignment="Center" Style="{StaticResource StandardTextBoxStyle}" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,15"/>

                <!-- Last Name -->
                <TextBlock Text="Last Name *" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,5"/>
                <TextBox x:Name="LastNameTextBox" Height="35" Padding="10,0,10,0" VerticalContentAlignment="Center" Style="{StaticResource StandardTextBoxStyle}" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,15"/>

                <!-- Phone -->
                <TextBlock Text="Phone *" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,5"/>
                <TextBox x:Name="PhoneTextBox" Height="35" Padding="10,0,10,0" VerticalContentAlignment="Center" Style="{StaticResource StandardTextBoxStyle}" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,15"/>

                <!-- Email -->
                <TextBlock Text="Email *" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,5"/>
                <TextBox x:Name="EmailTextBox" Height="35" Padding="10,0,10,0" VerticalContentAlignment="Center" Style="{StaticResource StandardTextBoxStyle}" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,15"/>

                <!-- Date of Birth -->
                <TextBlock Text="Date of Birth *" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,5"/>
                <DatePicker x:Name="DateOfBirthPicker" Height="35" Margin="0,0,0,15"/>

                <!-- Medical History -->
                <TextBlock Text="Medical History" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,5"/>
                <TextBox x:Name="MedicalHistoryTextBox" Height="80" Padding="10,10,10,10" VerticalAlignment="Top" VerticalContentAlignment="Top" TextWrapping="Wrap" Style="{StaticResource StandardTextBoxStyle}" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,15"/>

                <!-- Allergies -->
                <TextBlock Text="Allergies" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,5"/>
                <TextBox x:Name="AllergiesTextBox" Height="60" Padding="10,10,10,10" VerticalAlignment="Top" VerticalContentAlignment="Top" TextWrapping="Wrap" Style="{StaticResource StandardTextBoxStyle}" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,15"/>

                <!-- Status Message -->
                <TextBlock x:Name="StatusTextBlock" Text="" FontSize="{StaticResource FontSizeSmall}" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0" Padding="20" Background="{StaticResource SurfaceColor}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="40">
                <!-- Cancel Button -->
                <Button x:Name="CancelButton" Content="Cancel" Width="100" Height="40" Style="{StaticResource SecondaryButtonStyle}" Click="CancelButton_Click" Cursor="Hand" Margin="0,0,10,0"/>
                
                <!-- Save Button -->
                <Button x:Name="SaveButton" Content="Save" Width="100" Height="40" Style="{StaticResource PrimaryButtonStyle}" Click="SaveButton_Click" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
